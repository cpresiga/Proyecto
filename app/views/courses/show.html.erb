  <!-- LISTA DE VIDEOS-->

  <div class="container">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <div class="career-search mb-60">
          <div class="filter-result">       
            <% if user_signed_in? %>
              <% if return_user.admin.to_i == 1 %>
                <div class="container">
                  <%= link_to 'Add Topic', new_course_topic_path(@course), class:'btn btn-outline-dark btn-sm' %>
                </div>
              <% end %>
            <% end %>
            <hr>
            <div class="row justify-content-center text-center mb-4">
              <div class="col-xl-6 col-lg-8 col-sm-10">
                <h2 class="font-weight-bold">TÓPICOS</h2>
              </div>
              <% if user_signed_in? %>
                <div class="container" style="width:80%">
                  <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: <%=@prom%>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%=@prom%>%</div>
                  </div>
                </div>
              <% end %>
            </div>
            <% @course_topic.each do |topic| %>
            <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
              <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                  ▶
                </div>
                <div class="job-content">
                  <h4 class="text-md-left" style="margin-left: 40px"><%= topic.title %></h4>
                  <% if (user_signed_in?) %>
                    <% if (TopicLog.find_by(user_id: return_user.id) and TopicLog.find_by(topic_id: topic.id)) %>
                      <h6 class="text-md-left" style="margin-left: 40px; color:green"> Competed!</h6>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <div class="job-right my-4 flex-shrink-0">
                <%= link_to 'watch now', course_topic_path(@course, topic), class:'btn d-block w-100 d-sm-inline-block btn-light' %>
                <% if user_signed_in? %>
                  <% if return_user.admin.to_i == 1 %>
                    <div>
                    <%= link_to 'Edit', edit_course_topic_path(@course, topic), class:'btn btn-success btn-sm', style:'color:white' %>
                    <%= link_to 'Destroy', [@course, topic], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm', style:'color:white' %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
            <% end %>
            <div class="container">
            <hr>
              <%== pagy_bootstrap_nav(@pagy) %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

