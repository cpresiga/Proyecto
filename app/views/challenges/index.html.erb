<p id="notice"><%= notice %></p>

<h1>Challenges</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Inputs</th>
      <th>Lenguage</th>
      <th>Topics</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenge.each do |challenge| %>
      <tr>
        <td><%= challenge.name %></td>
        <td><%= challenge.challenge_description %></td>
        <td><%= challenge.output_description %></td>
        <td><%= challenge.output %></td>
        <td><%= link_to 'Edit Challenge', edit_course_topic_challenge_path(@course, @topic, challenge) %></td>
        <td><%= link_to 'Destroy Challenge', [@course, @topic, challenge], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

